{
    "version": null,
    "name": "JsonDiscovery",
    "short_name": "JsonDiscovery",
    "description": "Browser extension that changes the way you're viewing JSON",
    "author": "exdis",
    "manifest_version": 3,
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [{
        "js": ["init.js"],
        "run_at": "document_start",
        "matches": ["<all_urls>"]
    }],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "discovery.css",
                "discovery.js",
                "discovery-esm.js",
                "preloader.css",
                "icons/*",
                "assets/*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "offline_enabled": true
}
